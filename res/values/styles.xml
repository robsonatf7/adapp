<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Adapp" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_adapp</item>
        <item name="popupMenuStyle">@style/PopupMenu.Adapp</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Adapp</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Adapp</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Adapp</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Adapp</item>
        <item name="actionModeBackground">@drawable/cab_background_top_adapp</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_adapp</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Adapp</item>

        
    </style>

    <style name="ActionBar.Solid.Adapp" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_adapp</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_adapp</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_adapp</item>
        <item name="progressBarStyle">@style/ProgressBar.Adapp</item>
    </style>

    <style name="ActionBar.Transparent.Adapp" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_adapp</item>
        <item name="progressBarStyle">@style/ProgressBar.Adapp</item>
    </style>
	
    <style name="PopupMenu.Adapp" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_adapp</item>	
    </style>
	
    <style name="DropDownListView.Adapp" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_adapp</item>
    </style>

    <style name="ActionBarTabStyle.Adapp" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_adapp</item>
    </style>
	
    <style name="DropDownNav.Adapp" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_adapp</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_adapp</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_adapp</item>
    </style>
    
    <style name="ProgressBar.Adapp" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_adapp</item>
    </style>
    
    <style name="ActionButton.CloseMode.Adapp" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_adapp</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Adapp.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Adapp</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Adapp</item>
    </style>
    
</resources>
